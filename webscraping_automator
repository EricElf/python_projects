#Putting Everything Together

from bs4 import BeautifulSoup
import requests
import pandas as pd
from datetime import datetime
import os
import time
def automated_crypto_pull():
    url = 'https://coinmarketcap.com/currencies/bitcoin/'

    page = requests.get(url)

    soup = BeautifulSoup(page.text, 'html')

    outer_span = soup.find('span', class_='sc-d1ede7e3-0 bEFegK')

    crypto_name = outer_span.contents[0].strip()

    crypto_price = soup.find('span', class_ = 'sc-d1ede7e3-0 fsQm base-text').text

    final_price = crypto_price.replace('$', '')

    date_time = datetime.now()

    dict = {'Crypto Name':crypto_name,'Price':final_price,'Date Time':date_time}

    df = pd.DataFrame([dict])

    if os.path.exists(r'C:\Users\eelf8\Documents\py prac 3\crypto_automated_pull.csv'):
        df.to_csv(r'C:\Users\eelf8\Documents\py prac 3\crypto_automated_pull.csv', mode ='a', header = False, index = False)
    else:
        df.to_csv(r'C:\Users\eelf8\Documents\py prac 3\crypto_automated_pull.csv', index = False)
    print(df)

#Automating it to pull every 30 secs
while True:
    automated_crypto_pull()
    time.sleep(30)
